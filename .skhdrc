##################################################################################
# My configs
##################################################################################

# reload yabai
shift + cmd - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# directional navigation
ctrl + alt - h : yabai -m window --focus west
ctrl + alt - l : yabai -m window --focus east
ctrl + alt - j : yabai -m window --focus south
ctrl + alt - k : yabai -m window --focus north

# Resize windows
ctrl + cmd - h : \
    yabai -m window --resize left:-20:0 ; \
    yabai -m window --resize right:-20:0

ctrl + cmd - j : \
    yabai -m window --resize bottom:0:20 ; \
    yabai -m window --resize top:0:20

ctrl + cmd - k : \
    yabai -m window --resize top:0:-20 ; \
    yabai -m window --resize bottom:0:-20

ctrl + cmd - l : \
    yabai -m window --resize right:20:0 ; \
    yabai -m window --resize left:20:0

# swap windows by axis
shift + cmd - v : yabai -m space --mirror y-axis
shift + cmd - s : yabai -m space --mirror x-axis

# swap windows by rotating clockwise
shift + cmd - o : yabai -m space --rotate 270

# move mission-control index left/right
shift + cmd - h : yabai -m space --focus prev
shift + cmd - l : yabai -m space --focus next

## TIPS
## chord SHIFT+CMD+{j,b} to create a new space and beam it over

# create desktop
shift + cmd - j : yabai -m space --create

# destroy spaces
shift + cmd - k : yabai -m space --destroy

# beam window to next space
shift + cmd - b : yabai -m window --space next; yabai -m space --focus next

# pull window to back to prev space
shift + cmd - p : yabai -m window --space prev; yabai -m space --focus prev


